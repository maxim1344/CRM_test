@model Project

<form method="post" asp-action="Create">
    <div class="form-group mt-2">
        <label asp-for="Name">Имя</label>
        <input asp-for="Name" class="form-control" placeholder="Имя"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
        <div class="form-group mt-2">
        <label asp-for="ClientId">Клиент</label>
        <select asp-for="ClientId" class="form-select">
            @foreach (var item in ViewBag.data)
            {
                <option value="@Convert.ToUInt32(item.Id)">@item.Name</option>
            }   </select>
                <span asp-validation-for="ClientId" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <label asp-for="Status">Статус</label>
        <select asp-for="Status" class="form-select" asp-items="@Html.GetEnumSelectList<ProjectStatus>()">
            <option value="">-- Укажите статус --</option>
        </select>
    </div>
    <div class="form-group mt-2 mb-4">
        <label asp-for="Description">Описание</label>
        <input asp-for="Description" class="form-control" placeholder="Описание"/>
    </div>
    <div>
        <button class="btn btn-success">Создать</button>
    </div>
</form>
