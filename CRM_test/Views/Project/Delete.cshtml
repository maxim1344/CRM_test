@model Project

        <h1>Удаление проекта</h1>

<h3>Вы уверены, что хотите удалить этот проект?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Имя
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Клиент
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.Name)
        </dd>
       <dt class="col-sm-2">
            Статус
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
         <dt class="col-sm-2">
            Описание
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <form action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Подтвердить" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">К списку проектов</a>
    </form>
</div>