@model Client

<form method="post" asp-action="Edit">
    <div class="form-group mt-2">
        <label asp-for="Name">Имя</label>
        <input asp-for="Name" class="form-control" placeholder="Имя"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div> 
    <div class="form-group mt-2 mb-4">
        <label asp-for="Comment">Комментарий</label>
        <input asp-for="Comment" class="form-control" placeholder="Комментарий"/>
    </div>    
    <div>
        <button class="btn btn-success">Подтвердить</button>
        <a asp-action="Index" class="btn btn-secondary">К списку клиентов</a>
    </div>
</form>

