@model Notification

<form method="post" asp-action="Create">
    <div class="form-group mt-2">
        <label asp-for="DateOfNotification">Укажите дату напоминания:</label>
        <input asp-for="DateOfNotification" type="datetime-local" class="form-control">
    </div>
    <div class="form-group mt-2 mb-2">
        <input asp-for="ProjectId" hidden class="form-control" value="@ViewBag.data"/>
    </div>
    <div>
        <button type="submit" class="btn btn-success">Создать</button>
    </div>
</form>